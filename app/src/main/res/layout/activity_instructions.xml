<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--displays background-->
    <ImageView
        android:id="@+id/picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg1" />
    <!--displays instructions heading at the top-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/pokemonsolid"
        android:padding="10dp"
        android:text="Instructions"
        android:textColor="#FFFFFF"
        android:textSize="30dp" />
    <!--scrollview for the instructions-->
    <ScrollView
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:layout_marginTop="80dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--displays objective heading-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pokemonsolid"
                android:paddingLeft="10dp"
                android:text="Objective"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--displays objective instructions-->
                <TextView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/pokemonsolid"
                    android:paddingLeft="10dp"
                    android:text="The objective of the game is to have the board numbered from 1-15 and leaving the blank space on the last spot."
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />
                <!--displays picture reference for objective instructions-->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:src="@drawable/instruct1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!--displays restrictions heading-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pokemonsolid"
                        android:paddingLeft="10dp"
                        android:text="Restrictions"
                        android:textColor="#FFFFFF"
                        android:textSize="30dp"
                        android:textStyle="bold" />
                    <!--displays restrictions instructions-->
                    <TextView
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/pokemonsolid"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:text="You can only move pieces to the blank spaces. You can not place pieces in non-open spots. In the picture, the user is trying to swap 15 and 12 but is hit by an error."
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!--displays image reference for restrictions instructions-->
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingTop="60dp"
                        android:src="@drawable/instruc3" />
                    <!--displays image reference for restrictions instructions-->
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:src="@drawable/instruc2" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!--displays moving heading-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pokemonsolid"
                        android:paddingLeft="10dp"
                        android:text="Moving"
                        android:textColor="#FFFFFF"
                        android:textSize="30dp"
                        android:textStyle="bold" />
                    <!--displays moving instructions -->
                    <TextView
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/pokemonsolid"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:text="To move the pieces, first, click on the block you wish to move and then onto the blank space. In the image, you can see the highlighted red boxes around the selected pieces."
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!--displays moving image references-->
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingTop="60dp"
                        android:src="@drawable/instruc4" />
                    <!--displays moving image references-->
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:src="@drawable/instruct1" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!--displays win condition heading-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pokemonsolid"
                        android:paddingLeft="10dp"
                        android:text="Win Condition"
                        android:textColor="#FFFFFF"
                        android:textSize="30dp"
                        android:textStyle="bold" />
                    <!--displays win condition instructions-->
                    <TextView
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/pokemonsolid"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:text="After completing the board (reordering them to 1-15), you should get a popup, verifying your completion as seen in the image on the right."
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!--displays win condition image for reference-->
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingTop="60dp"
                        android:src="@drawable/instruct1" />
                    <!--displays win condition image for reference-->
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:src="@drawable/instruct5" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <!--sends them to game-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:backgroundTint="#BB0005"
        android:fontFamily="@font/pokemonsolid"
        android:onClick="click"
        android:text="Game time!"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</RelativeLayout>