<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--displays background-->
    <ImageView
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/bg1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <!--displays level text-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/pokemonsolid"
                android:paddingTop="10dp"
                android:text="Level"
                android:textColor="#FFFFFF"
                android:textSize="40dp" />
            <!--displays the actual level, has an id as it changes-->
            <TextView
                android:id="@+id/displaylevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/pokemonsolid"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="45dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <!--next button to go to the next level-->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#BB0005"
                android:fontFamily="@font/pokemonsolid"
                android:onClick="next"
                android:text="next"
                android:textColor="#FFFFFF" />
            <!--previous button to go back a level-->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#BB0005"
                android:fontFamily="@font/pokemonsolid"
                android:onClick="previous"
                android:text="previous"
                android:textColor="#FFFFFF" />
            <!--settings button to go to the settings screen-->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#BB0005"
                android:fontFamily="@font/pokemonsolid"
                android:onClick="settingsclick"
                android:text="Settings"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <!--displays the amount of moves the user had made-->
            <TextView
                android:id="@+id/movecount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pokemonsolid"
                android:padding="10dp"
                android:text="Moves: 0"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />


        </LinearLayout>

        <!--displays grid, 4x4-->
        <GridLayout
            android:id="@+id/grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="4"
            android:rowCount="4">

        </GridLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <!--reset button to reset the grid-->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:backgroundTint="#BB0005"
                android:fontFamily="@font/pokemonsolid"
                android:onClick="reset"
                android:text="reset"
                android:textColor="#FFFFFF" />
            <!--instructions button to go back to instructions-->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:backgroundTint="#BB0005"
                android:fontFamily="@font/pokemonsolid"
                android:onClick="instructionclick"
                android:text="Instructions"
                android:textColor="#FFFFFF" />
            <!--skip button to skip a level, won't have to finish the level to go next-->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:backgroundTint="#BB0005"
                android:fontFamily="@font/pokemonsolid"
                android:onClick="skip"
                android:text="Skip"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>